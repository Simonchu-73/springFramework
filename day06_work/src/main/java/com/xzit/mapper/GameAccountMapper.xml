<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xzit.mapper.GameAccountMapper">
    <insert id="insert" parameterType="GameAccount">
        INSERT INTO game_account VALUES (default,#{account},#{password},#{coupon})
    </insert>
    <select id="selectList" resultType="GameAccount">
        SELECT * FROM game_account
    </select>
    <select id="login" parameterType="GameAccount" resultType="GameAccount">
        SELECT * FROM game_account WHERE account=#{account} AND password=#{password}
    </select>
    <update id="couponUpdate" parameterType="GameAccount">
        UPDATE game_account SET coupon=#{coupon} WHERE account=#{account}
    </update>

</mapper>